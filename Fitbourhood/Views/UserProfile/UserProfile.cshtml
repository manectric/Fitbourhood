@{
    ViewBag.Title = "UserProfile";
}
@model Fitbourhood.Models.UserProfileModel
<h2>Statystyki spotkań</h2>

<span>Liczba zadeklarowanych spotkań: @Model.DeclaredSportEvents</span>
<span>Liczba potwierdzonych obecności: @Model.ApprovedSportEvents</span>
<span>Skuteczność: @Model.Percentage %</span>

<h2>Zmiana hasła</h2>
@using (Html.BeginForm("ChangePassword", "UserProfile", FormMethod.Post))
{
    <div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.OldPassword, new { type = "password", @class = "form-control", placeholder = "Stare hasło" })
            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "error" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(model => model.NewPassword, new { type = "password", @class = "form-control", placeholder = "Hasło" })
            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "error" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(model => model.NewPasswordRepeat, new { type = "password", @class = "form-control", placeholder = "Powtórz hasło" })
            @Html.ValidationMessageFor(model => model.NewPasswordRepeat, "", new { @class = "error" })
        </div>
        <input type="submit" class="btn btn-success" value="Zmień hasło" />
    </div>
    if (ViewBag.SuccessMessages != null)
    {
    <div class="alert alert-success"><strong>@ViewBag.SuccessMessages</strong></div>
    }
    else if (ViewBag.ErrorMessages != null)
    {
        foreach (var message in ViewBag.ErrorMessages)
        {
            <div class="alert alert-danger"><strong>@message</strong></div>
        }
    }

}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")