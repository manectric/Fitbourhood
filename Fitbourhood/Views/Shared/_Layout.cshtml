<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/fontello")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
<div class="container body-content">
    <div id="navigation-bar"><i class="fas fa-home navigate" style="float: left;" navigate-to="@Url.Action("Index", "SportEvent")"></i><i class="fas fa-power-off navigate" style="float: right;" navigate-to="@Url.Action("Logout", "Home")"></i><i class="fas fa-user navigate" style="float: right;"  navigate-to="@Url.Action("Index", "UserProfile")"></i><i class="fas fa-star navigate" style="float: right;"  navigate-to="@Url.Action("Achievements", "UserProfile")"></i><i class="fas fa-bell" style="float: right;"></i></div>
    <img src="~/Content/Images/logo.png" id="main-logo"/>
    <div id="border-div"></div>
    @RenderBody()
</div>

    
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>

<script>
    $('i.navigate').click(function () {
        var url = $(this).attr('navigate-to');

        if (url !== undefined)
            window.location.href = url;
    });
</script>